<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import java.lang.Double?>
<GridPane alignment="center" hgap="10" onKeyPressed="#onKeyPressed" vgap="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="coconuts.GameController">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <VBox fx:id="skyAndSand" prefHeight="600.0" prefWidth="600.0">
            <children>
                <Pane id="theGame" fx:id="gamePane" prefHeight="550.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom right, derive(skyblue, 20%), derive(skyblue, -40%));">
                    <children>
                        <Label layoutX="50.0" layoutY="550.0" scaleZ="2.0" text="Press arrow keys to move coconut" textFill="darkred" translateZ="1.0">
                            <font>
                                <Font name="Poor Richard" size="18.0" />
                            </font>
                        </Label>
                        <Label fx:id="gameOverLabel"
                               text="GAME OVER!"
                               visible="false"
                               layoutX="0.0" layoutY="0.0"
                               style="-fx-font-size: 60px;
                                      -fx-font-weight: bold;
                                      -fx-text-fill: red;
                                      -fx-effect: dropshadow(gaussian, yellow, 30, 0.8, 0, 0);
                                      -fx-alignment: center;
                                      -fx-background-color: transparent;"
                               prefWidth="600"
                               prefHeight="550" />
                  <HBox layoutX="380.0" prefHeight="108.0" prefWidth="220.0" style="-fx-border-color: grey;">
                     <children>
                        <VBox alignment="TOP_CENTER" prefHeight="106.0" prefWidth="115.0">
                           <children>
                              <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="35.0" prefWidth="109.0" text="Destoyed" textAlignment="CENTER">
                                 <font>
                                    <Font name="System Bold" size="18.0" />
                                 </font>
                              </Label>
                              <Label fx:id="destroyedCoconutsLabel" alignment="CENTER" prefHeight="72.0" prefWidth="111.0" text="Label" textFill="#1d5627">
                                 <font>
                                    <Font size="21.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        <VBox alignment="TOP_CENTER" prefHeight="106.0" prefWidth="110.0">
                           <children>
                              <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="37.0" prefWidth="110.0" text="Hit Beach" textAlignment="CENTER">
                                 <font>
                                    <Font name="System Bold" size="18.0" />
                                 </font>
                              </Label>
                              <Label fx:id="coconutsHitBeachLabel" alignment="CENTER" prefHeight="70.0" prefWidth="111.0" text="Label" textAlignment="CENTER" textFill="#ff2200">
                                 <font>
                                    <Font size="21.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                    </children>
                </Pane>
                <Pane id="theBeach" fx:id="theBeach" prefHeight="50.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom right, derive(tan, 30%), derive(tan, -50%));">
                </Pane>

            </children>
        </VBox>
    </children>
</GridPane>
